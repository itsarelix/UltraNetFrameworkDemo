
@page "/"



<div class="container mt-5">
    <div class="row">
        @foreach (var item in modules)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card module-card" @onclick="@(() => NavigateTo(item.Route))">
                    <div class="card-body text-center">
                        <div class="emoji-icon mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="@item.Class bi bi-lock-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d=@item.Icon />
                            </svg>
                        </div>
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>





